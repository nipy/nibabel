#!/usr/bin/make -f
# -*- mode: makefile; coding: utf-8 -*-

include /usr/share/cdbs/1/rules/debhelper.mk
DEB_PYTHON_SYSTEM = pysupport
DEB_PYTHON_MODULE_PACKAGE = python-nifti
include /usr/share/cdbs/1/class/python-distutils.mk

clean::
	$(MAKE) distclean

build/python-nifti::
	$(MAKE) htmlmanual

# install directly into package directory
DEB_DESTDIR = $(CURDIR)/debian/python-nifti
# immediately useable documentation
DEB_COMPRESS_EXCLUDE := .py .html .css .jpg .txt
# doc contents
DEB_INSTALL_DOCS_python-nifti := build/html

